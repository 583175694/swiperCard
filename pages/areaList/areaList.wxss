.table {
  width: 100%;
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}
.td {
    width:40%;
    justify-content: space-around;
    text-align: center;
    align-items: center;
    display: flex;
}
.td > text {
  font-size: 28rpx;
  color: blue;
}
.bg-w{
  background: snow;
}
.bg-g{
  background: #E6F3F9;
}
.th {
  width: 40%;
  justify-content: center;
  background: #3366FF;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
}

button {
  width: 80%;
  margin-top: 40rpx;
}

.addAreaCard {
  width: 86%;
  height: 86%;
  position: fixed;
  background-color: #fff;
  top: 5%;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: rgb(104, 104, 104);
}

.list {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 60rpx;
}

.Layer {
  width: 100%;
  height: 100%;
  position: fixed;
  background-color: #000;
  opacity: .4;
}

input {
  border: 1rpx solid rgb(200, 200, 200);
  border-radius: 8rpx;
  padding: 16rpx;
  margin-left: 20rpx;
}