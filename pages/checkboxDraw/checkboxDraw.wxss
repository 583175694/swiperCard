/* 下边出来的多项选项卡 */

/* checkbox未选中时样式 */

checkbox .wx-checkbox-input {
  border-radius: 50%;
  height: 38rpx;
  width: 38rpx;
}

/* checkbox选中时样式 */

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background-color: #88a7ff;
  border: 1rpx solid #88a7ff;
  /* 自定义样式.... */
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  border-radius: 50%;
  width: 38rrpx;
  height: 38rrpx;
  line-height: 38rrpx;
  text-align: center;
  font-size: 28rrpx; /* 对勾大小 28rrpx */
  color: #fff; /* 对勾颜色 白色 */
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.checkbox {
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 704rpx;
  background: rgba(255, 255, 255, 1);
  z-index: 999;
}

.checkbox .title {
  padding-top: 30rpx;
  padding-bottom: 22rpx;
}

.checkbox .title>text {
  font-size: 36rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 50rpx;
}

.content {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.checkboxItem {
  width: 642rpx;
  display: flex;
  justify-content: space-between;
  padding: 30rpx 68rpx 30rpx 40rpx;
  border-bottom: 1rpx solid rgba(231, 231, 231, 1);
}

.checkboxItem>text {
  font-size: 36rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 50rpx;
}

.layer {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 1);
}

.showLayer {
  opacity: 0.5;
  transition: all 0.2s ease;
  z-index: 998;
}

.hideLayer {
  opacity: 0;
  transition: all 0.2s ease;
  z-index: -1;
}

.show {
  transform: translateY(0);
  transition: all 0.6s ease;
}

.hide {
  transform: translateY(120%);
  transition: all 0.6s ease;
}

.display {
  width: 120rpx;
  height: 60rpx;
  border-radius: 6rpx;
  border: 2rpx solid #88a7ff;
  font-size: 32rpx;
  color: #88a7ff;
  line-height: 60rpx;
  text-align: center;
  margin: 0 auto;
  margin-top: 40rpx;
}

.hr {
  width: 100%;
  height: 1rpx;
  border-top: 4rpx dashed #88a7ff;
  margin-top: 40rpx;
}
